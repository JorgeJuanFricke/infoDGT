<div class="modal col-lg-4" id="modalActualizaUsuario">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Actualiza Usuario</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div class="form-group">
                    <label for="email">email</label>
                    <input type="text" name="email" class="form-control" value={{email}} >
                </div>
                <div class="form-group">
                    <label for="nombre">nombre</label>
                    <input type="text" name="nombre" class="form-control" value={{nombre}} >
                </div>
                 
                <div class="form-group">
                    <input type="checkbox" id="suspendido" name="suspendido">
                    <label for="suspendido">desactivado</label>
                     <input type="checkbox" id="admin" name="admin">
                    <label for="admin">administrador</label>
                    <input type="checkbox" id="OI" name="OI">
                    <label for="OI">OI</label>
                     <input type="checkbox" id="OAT" name="OAT">
                    <label for="OAT">OAT</label>



                </div>

               <div class="form-group">
                   <a href="#" onclick()="muestraFormResetPassword()">reset password</a>
               
                </div>
            
                <button id="UsuarioOK" type="button" onclick="actualizaUsuario()" class="btn btn-primary">grabar</button>
                <button type="button" class="btn btn-secondary">Cancelar</button>
            
            </div>
        </div>
    </div>
</div>
